---
import "../styles/global.css";
import { Image } from "astro:assets";
import HeroImage from "../assets/about.jpg";
---

<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <div class="logo-container">
          <div class="logo-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50" class="money-icon">
              <rect x="10" y="15" width="30" height="20" fill="#D4B872" stroke="#D4B872" stroke-width="2"/>
              <circle cx="25" cy="25" r="6" fill="#0F3726" stroke="#D4B872" stroke-width="2"/>
              <text x="23" y="28" font-size="10" fill="#D4B872">$</text>
              <line x1="25" y1="35" x2="25" y2="45" stroke="#D4B872" stroke-width="2"/>
              <line x1="20" y1="45" x2="30" y2="45" stroke="#D4B872" stroke-width="2"/>
            </svg>
          </div>
          <div class="logo-text">
            <h2>BPL</h2>
            <h2>EquiSave</h2>
          </div>
        </div>
        <p class="tagline">Empowering Borrowers. Unlocking Investments. Transforming Recovery.</p>
      </div>
      <div class="hero-image">
        <Image
          src={HeroImage}
          alt="Hero Image"
          class="circle-image"
          width={500} 
          height={500}
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    background-color: #0F3726;
    color: #D4B872;
    padding: 1rem 2rem;
    font-family: 'Arial', sans-serif;
    position: relative;
    /* Added padding-top to accommodate fixed header */
    padding-top: 5rem;
    margin-top: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem 0;
  }

  .hero-text {
    flex: 1;
  }

  .logo-container {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
  }

  .logo-icon {
    width: 60px;
    height: 60px;
    margin-right: 1rem;
  }

  .logo-text {
    color: #D4B872;
  }

  .logo-text h2 {
    margin: 0;
    font-size: 2rem;
    line-height: 1.2;
  }

  .tagline {
    font-size: 1rem;
    margin: 0.5rem 0 2rem;
    color: #D4B872;
  }

  h1 {
    font-size: 5rem;
    font-weight: bold;
    margin: 0;
    line-height: 1;
    color: #D4B872;
  }

  .hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
    position: relative;
  }

  /* Updated to match the class used with the Astro Image component */
  .circle-image {
    width: 400px;
    height: 400px;
    object-fit: cover;
    border-radius: 50%;
    border: 15px solid #fff;
    box-shadow: 0 0 0 15px rgba(212, 184, 114, 0.3);
  }

  .main-nav {
    position: absolute;
    top: 2rem;
    right: 2rem;
  }

  .main-nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .main-nav a {
    color: #D4B872;
    text-decoration: none;
    font-size: 1.1rem;
    transition: color 0.3s;
  }

  .main-nav a:hover {
    color: #fff;
  }

  .contact-button {
    border: 2px solid #D4B872;
    border-radius: 30px;
    padding: 0.5rem 1.5rem;
  }

  .contact-button:hover {
    background-color: #D4B872;
    color: #0F3726 !important;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding-top: 4rem; /* Slightly less padding on mobile */
    }
    
    .hero-content {
      flex-direction: column;
    }

    h1 {
      font-size: 3.5rem;
      margin-bottom: 2rem;
    }

    .main-nav {
      position: static;
      margin-top: 1rem;
    }

    .main-nav ul {
      flex-direction: column;
      gap: 1rem;
    }

    .circle-image {
      width: 300px;
      height: 300px;
    }
  }
</style>