---
import "../styles/global.css";
import Image from "astro/components/Image.astro";
import Logo from "../assets/equisave-logo.png";
---

<header class="fixed w-full z-50 bg-[#1B422D] text-white">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center mr-8">
        <Image src={Logo} alt="BPL EquiSave" class="h-8 w-auto sm:h-10" /> <!-- Adjusted logo size -->
      </a>

      <!-- Navigation Items -->
      <div class="flex items-center gap-4 sm:gap-8">
        <!-- Hamburger for mobile -->
        <button 
          class="sm:hidden text-[#C3A962]" 
          id="menu-toggle"
          aria-label="Toggle menu"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Nav Links - These will be shown/hidden based on screen size and menu state -->
        <div class="hidden sm:flex items-center gap-8" id="nav-links">
          <a href="#about" class="text-white hover:text-[#C3A962] transition-colors">About Us</a>
          <a href="#investors" class="text-white hover:text-[#C3A962] transition-colors">For Investors</a>
          <a href="#borrowers" class="text-white hover:text-[#C3A962] transition-colors">For Borrowers</a>
          <a href="#how-it-works" class="text-white hover:text-[#C3A962] transition-colors">How It Works</a>
          <a 
            href="#contact" 
            class="border-2 border-[#C3A962] text-[#C3A962] px-6 py-2 rounded-full hover:bg-[#C3A962] hover:text-[#1B422D] transition-colors"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>

    <!-- Mobile menu - Only shown when toggled -->
    <div class="sm:hidden hidden" id="mobile-menu">
      <div class="flex flex-col gap-4 pt-4">
        <a href="#about" class="text-white hover:text-[#C3A962] transition-colors">About Us</a>
        <a href="#investors" class="text-white hover:text-[#C3A962] transition-colors">For Investors</a>
        <a href="#borrowers" class="text-white hover:text-[#C3A962] transition-colors">For Borrowers</a>
        <a href="#how-it-works" class="text-white hover:text-[#C3A962] transition-colors">How It Works</a>
        <a 
          href="#contact" 
          class="border-2 border-[#C3A962] text-[#C3A962] px-6 py-2 rounded-full hover:bg-[#C3A962] hover:text-[#1B422D] transition-colors inline-block w-fit"
        >
          Contact Us
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  menuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>